    <ul class="navbar-nav my-2 my-lg-0">
        @if (Request.IsAuthenticated)
        {
            //kullanıcı adı ve logout linkleri
            <li class="nav-item active">
                <a class="nav-link" href="/Account">@User.Identity.Name</a>
            </li>
            <li class="nav-item active">
                <a class="nav-link" href="/Account/Logout" style="color:red">Logout</a>
            </li>
        }
        else
        {
            //login ve register linkleri
            <li class="nav-item active">
                <a class="nav-link" href="/Account/Login" style="color:blue">Login</a>
            </li>
            <li class="nav-item active">
                <a class="nav-link" href="/Account/Register">Register</a>
            </li>
        }
    </ul>
